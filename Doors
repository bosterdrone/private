getgenv().keytoclick = "Q"

local tool = Instance.new("Tool")
tool.RequiresHandle = false
tool.Name = keytoclick
tool.Activated:Connect(function()
    local vim = game:GetService("VirtualInputManager")
    vim:SendKeyEvent(true, keytoclick, false, game)
end)

-- Function to handle respawning
local function onCharacterAdded(character)
    -- Parent the tool to the new character
    tool.Parent = character
end

-- Listen for the player's character respawn
game.Players.LocalPlayer.CharacterAdded:Connect(onCharacterAdded)

-- Parent the tool to the player's current character
if game.Players.LocalPlayer.Character then
    tool.Parent = game.Players.LocalPlayer.Character
end

-- Delay the notification to ensure it's shown after the tool setup
wait(0.2)

-- Assuming the notification code remains unchanged
local AkaliNotif = loadstring(game:HttpGet("https://raw.githubusercontent.com/Kinlei/Dynissimo/main/Scripts/AkaliNotif.lua"))();
local Notify = AkaliNotif.Notify;
Notify({
    Description = "sus",
    Title = "sus",
    Duration = 5;
});
